<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Preview" android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cute" android:id="@+id/preview"
            android:layout_weight="1" android:layout_margin="16dp"/>
    <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/back" android:layout_weight="1"
            android:layout_margin="16dp"/>
</LinearLayout>