<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/windows" android:id="@+id/imageView"
                android:layout_weight="1" android:background="#575757"/>
        <TextView
                android:text="Windosw10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="3"
                android:background="#575757" android:gravity="center_vertical" android:textColor="#ECECEC"
                android:textStyle="bold" android:textSize="24sp"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/listView"/>

</LinearLayout>